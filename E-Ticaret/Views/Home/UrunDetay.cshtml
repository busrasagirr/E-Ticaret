@using E_Ticaret.Models;
@{
    ViewBag.Title = "Ürün Detay";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-3">
        <h4>Kategoriler</h4>
        <ul>
            @foreach (var item in (List<Kategori>)ViewBag.KategoriListesi)
            {
                <li>
                    @Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <h3>Ürün Adı</h3>
        <h4>@Model.UrunAdi</h4>
        <div class="row">
            <div class="col-md-6">
                <img src="~/images/@(Model.UrunID).jpg" style="max-width:100%;height:250px" />
            </div>
            <div class="col-md-6">
                Fiyat:<span style="color:#670e0e;font:bold;font-size:15px">@Model.UrunFiyati TL</span><br />
                Açıklama:<span>@Model.UrunAciklamasi</span>
                <form action="/Sepets/SepeteEkle">
                    <input type="hidden" name="id" id="id" value="@Model.UrunID" style="width:50px;" />
                    <input type="submit" id="gonder" value="Sepete Ekle" class="btn btn-group"/>
                </form>
            </div>
        </div>
    </div>
</div>


