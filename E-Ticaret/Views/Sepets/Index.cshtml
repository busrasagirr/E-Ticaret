@model IEnumerable<E_Ticaret.Models.Sepet>

@{
    ViewBag.Title = "Sepetim";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Ürün Adı
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Toplam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adet)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Urunler.UrunAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Toplam)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Adet)
        </td>*@
        <td>
            <form action="/Sepets/SepetGuncelle">
                <input type="hidden" name="id" id="id" value="@item.SepetID" />
                <input type="number" name="adet" id="adet" value="@item.Adet" />
                <input type="submit" id="gonder" value="Güncelle" />
            </form>
        </td>
        <td>
            @Html.ActionLink("Sil", "Delete", new { id = item.SepetID })
        </td>
    </tr>
}
    <tr>
        <th>Toplam:</th>
        <th>@Model.Sum(x => x.Toplam)</th>
        <th>@Model.Sum(x => x.Adet)</th>
    </tr>
    <tr>
        <td><a class="btn btn-default" href="@Url.Action("Index","Home")">Alışverişe Devam Et</a></td>
        <td colspan="2"><a class="btn btn-default" href="@Url.Action("SiparisTamamla","Siparis")">Siparişi Tamamla</a></td>
    </tr>

</table>
